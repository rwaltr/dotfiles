# RWALTR Bash Config
# vi: ft=bash
# .bashrc

if [[ $- != *i* ]]; then
  # shell is non-interactive. be done now!
  return
fi

# Source modular Bash files if interactive
if [ -d "$HOME/.config/bashrc.d" ]; then
  for file in "$HOME"/.config/bashrc.d/*.sh; do
    [ -f "$file" ] && source "$file"
  done
fi
