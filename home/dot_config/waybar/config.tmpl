// =============================================================================
//
// Waybar configuration
//
// Configuration reference: https://github.com/Alexays/Waybar/wiki/Configuration
//
// =============================================================================

{
    // -------------------------------------------------------------------------
    // Global configuration
    // -------------------------------------------------------------------------

    "layer": "top",

    "position": "top",

    // If height property would be not present, it'd be calculated dynamically
    "height": 10,


    "modules-left": [
        "sway/workspaces",
        "sway/mode"
    ],
    "modules-center": [
    ],
    "modules-right": [
        "sway/window",
        "custom/weather",
        "network",
				{{- if eq .mpd.enabled true -}}
        "mpd",
				{{- end }}
        /* "memory", */
        /* "cpu", */
        /* "temperature", */
        "idle_inhibitor",
        "pulseaudio",
        /* "battery", */
        "tray",
        "clock#time",
        "clock#date"
    ],


    // -------------------------------------------------------------------------
    // Modules
    // -------------------------------------------------------------------------

    "battery": {
        "interval": 10,
        "states": {
            "warning": 30,
            "critical": 15
        },
        // Connected to AC
        "format": "ÔÉß  {icon}  {capacity}%", // Icon: bolt
        // Not connected to AC
        "format-discharging": "{icon}  {capacity}%",
        "format-icons": [
            "ÔâÑ", // Icon: battery-full
            "ÔâÉ", // Icon: battery-three-quarters
            "ÔâÇ", // Icon: battery-half
            "ÔâÅ", // Icon: battery-quarter
            "ÔâÄ"  // Icon: battery-empty
        ],
        "tooltip": true
    },

    "clock#time": {
        "interval": 1,
        "format": "{:%r}",
        //"tooltip": false
        "tooltip-format": "{:24h %R %nISO %FT%T%z }",
        "on-click": "date -Iseconds | wl-copy && notify-send 'Time Copied'",
        "on-click-right": "TZ=UTC date -Iseconds | wl-copy && notify-send 'UTC Time Copied'"
    },

    "clock#date": {
      "interval": 10,
      //"format": "ÔÅ≥  {:%e %b %Y}", // Icon: calendar-alt
      "format": "ÔÅ≥  {:%a %b %F}", // Icon: calendar-alt
      "tooltip-format": "<big>{:%Y %B}</big>\n<tt><big>{calendar}</big></tt>",
      "on-click": "date -I | wl-copy && notify-send 'Date Copied'"
    },

    "cpu": {
        "interval": 5,
        "format": "Ôãõ  {usage}% ({load})", // Icon: microchip
        "states": {
          "warning": 70,
          "critical": 90
        }
    },

    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ÔÅÆ",
            "deactivated": "ÔÅ∞"
        }
    },

    "memory": {
        "interval": 5,
        "format": "Ôî∏  {}%", // Icon: memory
        "states": {
            "warning": 70,
            "critical": 90
        }
    },

    "network": {
        "interval": 5,
        "format-wifi": "Ôá´  {essid} ({signalStrength}%)", // Icon: wifi
        "format-ethernet": "Ôûñ ", // Icon: ethernet
        "format-disconnected": "‚ö†  Disconnected",
        "tooltip-format": "{ifname}: {ipaddr}",
        "on-click": "nm-connection-editor"
    },

    "sway/mode": {
        "format": "<span style=\"italic\">Ôåû  {}</span>", // Icon: expand-arrows-alt
        "tooltip": false
    },

    "sway/window": {
        "format": "{}",
        "max-length": 120
    },

    "sway/workspaces": {
        "all-outputs": false,
        "disable-scroll": true,
        "format": "{index}:{name}"
    },

    "pulseaudio": {
        "scroll-step": 3, // %, can be a float
        "format": "{icon} {volume}% {format_source}",
        "format-bluetooth": "{volume}% {icon}Ôäî {format_source}",
        "format-bluetooth-muted": "Ôö© {icon}Ôäî {format_source}",
        "format-muted": "Ô±ù {format_source}",
        "format-source": "{volume}% ÔÑ∞",
        "format-source-muted": "ÔÑ±",
        "format-source": "ÔÑ∞",
        "format-source-muted": "ÔÑ±",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ô∞ù",
            "headset": "Ôüç",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "on-click": "pavucontrol",
        "on-click-right": "pactl set-source-mute @DEFAULT_SOURCE@ toggle"
    },
    "temperature": {
      "critical-threshold": 80,
      "interval": 5,
      "format": "{icon}  {temperatureC}¬∞C",
      "format-icons": [
          "Ôãã", // Icon: temperature-empty
          "Ôãä", // Icon: temperature-quarter
          "Ôãâ", // Icon: temperature-half
          "Ôãà", // Icon: temperature-three-quarters
          "Ôãà"  // Icon: temperature-full
      ],
      "tooltip": true
    },

    "tray": {
        "icon-size": 21,
        "spacing": 10
    },
    "mpd": {
        "format": "[{stateIcon} Óàñ {consumeIcon}{randomIcon}{repeatIcon}{singleIcon}] {title} ({elapsedTime:%M:%S}/{totalTime:%M:%S}) ÔÄÅ",
        "format-disconnected": "Disconnected Ô†π",
        "format-stopped": "{consumeIcon}{randomIcon}{repeatIcon}{singleIcon}Stopped Ô±ô",
        "interval": 2,
        "consume-icons": {
            "on": " üìª" // Icon shows only when "consume" is on
        },
        "random-icons": {
            "off": "", // Icon grayed out when "random" is off
            "on": " ÔÅ¥ "
        },
        "repeat-icons": {
            "on": " Ô•ï"
        },
        "single-icons": {
            "on": "1"
        },
        "state-icons": {
            "paused": "ÔÅå",
            "playing": "ÔÅã"
        },
        "tooltip-format": "{artist} - {title}",
        "tooltip-format-disconnected": "MPD (disconnected)",
        "on-click": "mpc -q toggle",
        "on-scroll-up": "mpc volume +2",
        "on-scroll-down": "mpc volume -2"
        
    },
    "custom/weather": {
       "format": "{}",
       "tooltip": true,
       "interval": 3600,
       "exec": "waybar-wttr.py",
       "return-type": "json"
     }
}
