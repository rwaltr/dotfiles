# "$schema" = 'https://starship.rs/config-schema.json'
# Do not print newline after prompt
add_newline = false


# [custom.talos]
# command = "talosctl config info | head -1 | cut -d: -f2 | xargs"
# when = "command -q talosctl"
# symbol = "🔺"
# style = "red"
# format ='\[[$symbol$output]($style)\]'
# disabled = true

# format = "$all"
format = """
[┌─╴](dimmed white)$shell$username$hostname$sudo$directory$all$status 
[└](dimmed white)$character
"""
continuation_prompt = "▶▶"

[shell]
fish_indicator = ""
powershell_indicator = ""
bash_indicator = ""
elvish_indicator = "λ"
style = "blue bold"
disabled = false

[fill]
symbol = " "

[hostname]
ssh_only = false
format = "[@](dimmed white)[$hostname]($style) "
style = "blue"
{{- if eq .osid "android"}}
disabled = true
{{- else }}
disabled = false
{{- end}}

[directory]
truncation_length = 8
truncation_symbol = "…/"
read_only = " "
home_symbol = " "
disabled = false

[character]
success_symbol = "[>](dimmed white)"
error_symbol = "[>](bold red)"
vicmd_symbol = '[](dimmed white)'
disabled = false

[status]
disabled = false
format = "[$symbol $status]($style) "

[aws]
format = '\[[$symbol($profile)(\($region\))(\[$duration\])]($style)\]'
symbol = " "
disabled = false

[aws.region_aliases]
us-east-1 = "N. Virginia"
us-east-2 = "Ohio"
us-west-1 = "N. California"
us-west-2 = "Oregon"

[cmake]
format = '\[[$symbol($version)]($style)\]'
disabled = false

